<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayout" xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	<ListView android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:id="@+id/listView" android:layout_height="wrap_content" android:layout_width="fill_parent"></ListView>
	<TextView android:layout_alignParentLeft="true" android:id="@+id/fare" android:layout_width="fill_parent" android:layout_gravity="center_vertical" android:textSize="30dp" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_above="@+id/searchBox"></TextView>
	<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/searchBox" android:layout_alignParentBottom="true" android:layout_toLeftOf="@+id/btnClear" android:inputType="text">
		<requestFocus></requestFocus>
	</EditText>
	<Button android:text="Clear Stations" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:id="@+id/btnClear" android:layout_alignParentRight="true"></Button>
</RelativeLayout>
